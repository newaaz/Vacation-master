<header class="mb-4 shadow py-1">
	<nav class="navbar">
		<div class="container">
      <%= link_to root_url, class: "navbar-brand fw-semibold text-primary" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-bar-chart-steps" viewBox="0 0 16 16">
          <path d="M.5 0a.5.5 0 0 1 .5.5v15a.5.5 0 0 1-1 0V.5A.5.5 0 0 1 .5 0zM2 1.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-4a.5.5 0 0 1-.5-.5v-1zm2 4a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-7a.5.5 0 0 1-.5-.5v-1zm2 4a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-6a.5.5 0 0 1-.5-.5v-1zm2 4a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-7a.5.5 0 0 1-.5-.5v-1z"/>
        </svg>
        
        <span class="text-dark">Vacation Master</span>
      <% end %>      
        
      <div class="text-end">
        <% if employee_signed_in? %>
          <div class="dropdown d-inline">
            <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%= current_employee.email %>		
            </button>
            <ul class="dropdown-menu">
              <li>
                <%= link_to employee_path(current_employee), class: 'dropdown-item' do %>
                  <i class="bi bi-person-workspace me-2"></i>My profile
                <% end %>
              </li>
              <li>
                <%= link_to new_vacation_path, class: 'dropdown-item' do %>
                  <i class="bi bi-info-circle me-2"></i> Request vacation
                <% end %>
              </li>
              <li>
                <%= link_to destroy_employee_session_path, data: { "turbo-method": :delete }, class: 'dropdown-item bg-danger-soft-hover' do %>
                  <i class="bi bi-box-arrow-right me-2"></i>Sign Out
                <% end %>
              </li>
            </ul>
          </div>

          <% if current_employee.admin? %>
            <div class="dropdown d-inline">
            <button class="btn btn-outline-primary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
              Admin	
            </button>
            <ul class="dropdown-menu">
              <li>
                <%= link_to vacations_path, class: 'dropdown-item' do %>
                  <i class="bi bi-person-workspace me-2"></i>Vacations
                <% end %>
              </li>
              <li>
                <%= link_to destroy_employee_session_path, data: { "turbo-method": :delete }, class: 'dropdown-item bg-danger-soft-hover' do %>
                  <i class="bi bi-box-arrow-right me-2"></i>Sign Out
                <% end %>
              </li>
            </ul>
          </div>
          <% end %>
        <% else %>
        	<%= link_to "Log in", new_employee_session_path, class: 'btn btn-primary btn-sm me-1' %>
  				<%= link_to "Sign up", new_employee_registration_path, class: 'btn btn-outline-primary btn-sm' %>
        <% end %>
      </div>
		</div>
	</nav>
</header>

